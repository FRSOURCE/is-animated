{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "./dist",
    "lib": ["ESNext", "dom"],
    "strict": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    "checkJs": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.mjs", "src/index.mjs"]
}
